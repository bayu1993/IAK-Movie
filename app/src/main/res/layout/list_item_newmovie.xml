<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newmovie_layout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="@dimen/cardview_compat_inset_shadow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_cover_new"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:contentDescription="movie cover"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_title_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_cover_new"
            android:paddingEnd="16dp"
            android:text="title"
            android:gravity="top"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tv_subtitle_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_new"
            android:layout_toRightOf="@id/iv_cover_new"
            android:paddingEnd="16dp"
            android:text="subtitle"
            android:textColor="@color/colorGrey"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tv_desc_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_subtitle_new"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_cover_new"
            android:maxLines="3"
            android:paddingEnd="16dp"
            android:text="movie description movie"
            android:textColor="@color/colorGreyLight"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_desc_new"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/iv_cover_new"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rating_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:text="5.0" />

            <ImageView
                android:id="@+id/iv_rating_image_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_star"
                android:tint="@color/colorStar" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
